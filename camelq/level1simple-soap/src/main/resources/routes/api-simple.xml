<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://camel.apache.org/schema/spring"
        xsi:schemaLocation="
            http://camel.apache.org/schema/spring
            http://camel.apache.org/schema/spring/camel-spring.xsd">


    <!-- MAIN -->
    <route id="main">
      <from uri="direct:getDetails"/>

      <!-- REQUEST TRANSFORMATION -->
      <to uri="direct:json2soap"/>

      <!-- CALL to BACKEND -->
      <setHeader name="CamelDestinationOverrideUrl">
          <simple>http://{{api.backend1.host}}/services/s1</simple>
      </setHeader>
      <to uri="cxf:bean:s1"/>

      <!-- RESPONSE TRANSFORMATION -->
      <to uri="direct:soap2json"/>
    </route>
   

    <route id="json2soap">
      <from uri="direct:json2soap"/>
      <convertBodyTo type="String"/>
      <setHeader name="json">
        <simple>${body}</simple>
      </setHeader>
      <setBody>
        <constant>&lt;data/&gt;</constant>
      </setBody>
      <!-- <log message="json2soap->JSON:\n${header.json}"/> -->
      <to uri="xslt-saxon:xslt/j2s.xsl"/>
      <!-- <log message="json2soap->SOAP:\n${body}"/> -->
    </route> 


    <route id="soap2json">
      <from uri="direct:soap2json"/>
      <setBody>
        <simple>${body[0]}</simple>
      </setBody>
      <!-- <log message="soap2json->SOAP:\n${body}"/> -->
      <to uri="xslt-saxon:xslt/s2j.xsl"/>
      <!-- <log message="soap2json->JSON:\n${body}"/> -->
      <setHeader name="Content-Type">
        <constant>application/json</constant>
      </setHeader>
    </route>

</routes>